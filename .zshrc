# alias ohmyzsh="mate ~/.oh-my-zsh"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# alias
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -a -l'
alias lf='ls -1 -F'
alias bat='bat --paging=never --theme=TwoDark'
alias f='fzf --reverse --border'
alias fontpreview='fontpreview-ueberzug'
# alias cdh='cd'
alias c++='clang++'
alias rust='cargo run --bin'
alias clip='xclip -selection c'

# alias xephyr='Xephyr :1 -ac -br -screen 800x500'

# color output
alias grep='grep --color=auto'
alias ip='ip -color=auto'
#alias ls='ls --color=auto'
alias ls='eza --icons'

# tasks-tool
alias task='nvim tasks.md'

# flutter
# export PATH="$PATH:/opt/flutter/bin"

# rofi
# export PATH=$HOME/.config/rofi/bin:$PATH

# display
alias x0='xrandr --output eDP1 --auto'

# z
# . /z/z.sh
source ~/z/z.sh

# fzf
source /usr/share/fzf/key-bindings.zsh
source /usr/share/fzf/completion.zsh

unalias z 2> /dev/null
z() {
  [ $# -gt 0 ] && _z "$*" && return
  cd "$(_z -l 2>&1 | fzf --height 40% --nth 2.. --reverse --inline-info +s --tac --query "${*##-* }" | sed 's/^[0-9,.]* *//')"
}

